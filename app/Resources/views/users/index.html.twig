{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vartotojų sąrašas</h1>

    <table>
        <thead>
            <tr>
                <th>Vartotojo vardas</th>
                <th>Rolė</th>
                <th>E-paštas</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'id': user.id }) }}">rodyti</a>
                        </li>
                        <li>
                            <a href="{{ path('users_edit', { 'id': user.id }) }}">redaguoti</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_new') }}">Sukurti naują</a>
        </li>
    </ul>
{% endblock %}
