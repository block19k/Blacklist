{% extends 'base.html.twig' %}

{% block body %}
    <h1>Links</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ link.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ link.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if link.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ link.link }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('links_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('links_edit', { 'id': link.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
