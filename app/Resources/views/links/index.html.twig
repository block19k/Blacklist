{% extends 'base.html.twig' %}

{% block body %}
    <h1>URL sąrašas</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Pavadinimas</th>
                <th>Apibūdinimas</th>
                <th>URL</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Aktyvus</th>
                    <th>Vartotojas</th>
                    <th>Prašymo tipas</th>
                {% endif %}
                <th>Veiksmai</th>

            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td><a href="{{ path('links_show', { 'id': link.id }) }}">{{ link.title }}</a></td>
                <td>{{ link.description }}</td>
                
                <td>{{ link.link }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{% if link.active %}Yes{% else %}No{% endif %}</td>
                    <td>{{ link.user }}</td>
                    <td>{{ link.requesttype }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('links_show', { 'id': link.id }) }} " class = "btn btn-primary">rodyti</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('links_edit', { 'id': link.id }) }}"  class = "btn btn-primary">redaguoti</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('links_new') }}" class = "btn btn-success">Kurti prašymą įdėti/išimti nuorodą</a>
{% endblock %}
