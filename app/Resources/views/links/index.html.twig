{% extends 'base.html.twig' %}

{% block body %}
    <h1>URL sąrašas</h1>

    <table>
        <thead>
            <tr>
                <th>Pavadinimas</th>
                <th>Apibūdinimas</th>
                <th>Aktyvus</th>
                <th>URL</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td><a href="{{ path('links_show', { 'id': link.id }) }}">{{ link.title }}</a></td>
                <td>{{ link.description }}</td>
                <td>{% if link.active %}Yes{% else %}No{% endif %}</td>
                <td>{{ link.link }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('links_show', { 'id': link.id }) }}">rodyti</a>
                        </li>
                        <li>
                            <a href="{{ path('links_edit', { 'id': link.id }) }}">redaguoti</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('links_new') }}">Sukurti naują</a>
        </li>
    </ul>
{% endblock %}
